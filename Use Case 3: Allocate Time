def allocate_time_to_task(task_id):
    # get task object from database based on task_id
    task = get_task(task_id)
    
    # display form for allocating time to task
    allocated_time = input("Enter amount of time allocated to task (in hours): ")
    
    # validate input
    if not allocated_time or not allocated_time.isdigit():
        print("Invalid input, please enter a valid amount of time in hours.")
        return
    
    # add allocated time to task's total time
    task.add_allocated_time(int(allocated_time))
    
    # save changes to database
    save_changes()
    
    print("Time allocated to task successfully!")
