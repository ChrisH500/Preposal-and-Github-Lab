def log_time(task_id):
    # get task object from database based on task_id
    task = get_task(task_id)
    
    # display form for logging time spent
    time_spent = input("Enter amount of time spent on task (in hours): ")
    
    # validate input
    if not time_spent or not time_spent.isdigit():
        print("Invalid input, please enter a valid amount of time in hours.")
        return
    
    # add time spent to task's total time
    task.add_time_spent(int(time_spent))
    
    # save changes to database
    save_changes()
    
    print("Time logged successfully!")
